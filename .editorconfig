# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 4
tab_width = 4

[*.xml]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{css,scss,sass}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{js,jsx,json}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.min.{js,css}]
trim_trailing_whitespace = false
insert_final_newline = false
