# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = tab
indent_size = 4
tab_width = 4

# JavaScript files
[*.{js,jsx}]
indent_style = tab
indent_size = 2
tab_width = 2

# CSS files
[*.{css,scss,sass}]
indent_style = tab
indent_size = 2
tab_width = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package files
[{package.json,composer.json}]
indent_style = space
indent_size = 2

# Configuration files
[*.{xml,yml,yaml}]
indent_style = space
indent_size = 2

# WordPress specific
[wp-config.php]
indent_style = space
indent_size = 2

# Minified files
[*.min.{js,css}]
trim_trailing_whitespace = false
insert_final_newline = false
